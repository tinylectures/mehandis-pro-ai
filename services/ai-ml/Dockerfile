FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    build-essential \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

COPY services/ai-ml/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY services/ai-ml/ ./

EXPOSE 5001

CMD ["python", "main.py"]
